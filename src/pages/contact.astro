---
import Layout from "../layouts/Layout.astro";
 
import "@styles/contact.css";
---

<Layout title="Contact Redream ">
  <div class="relative isolate bg-gunmetal">
    <div class="mx-auto grid max-w-7xl grid-cols-1 lg:grid-cols-2">
      <form
        action="https://api.web3forms.com/submit"
        method="POST"
        id="form"
        data-astro-reload
        class="needs-validation px-6 pt-20 pb-24 sm:pb-32 lg:px-8 lg:py-48"
      >
        <input type="hidden" name="from_name" value="Redream Form message" />

        <input
          type="hidden"
          name="access_key"
          value="98ee9c36-be5e-4f89-b7aa-2269ffdfe870"
        />
        <input
          type="checkbox"
          class="hidden"
          style="display:none"
          name="botcheck"
        />

        <div class="mx-auto max-w-xl lg:mr-0 lg:max-w-lg">
          <div class="grid grid-cols-1 gap-x-8 gap-y-6 sm:grid-cols-2">
            <div>
              <label for="first-name" class="block text-sm/6 text-gray-300"
                >Name</label
              >
              <div class="">
                <input
                  type="text"
                  placeholder="Name"
                  name="first-name"
                  id="first-name"
                  autocomplete="given-name"
                  class="focus:ring-2 focus:ring-red-devil-600 font-light text-gray-200 focus:ring-red-devil-devil-800 transition-all duration-300 ease-in-out bg-gunmetal-400 block w-full rounded-md bg-white/5 px-3.5 py-2 mt-2 text-base placeholder:font-light placeholder:text-gray-600"
                />

                <div class="invalid-feedback text-red-devil-500 text-sm mt-1">
                  Please provide your name.
                </div>
              </div>
            </div>
            <div>
              <label for="email_address" class="block text-sm/6 text-gray-300"
                >Email</label
              >

              <div class="mt-2.5">
                <input
                  id="email_address"
                  type="email"
                  placeholder="Email"
                  required
                  name="email"
                  id="email"
                  autocomplete="email"
                  class="focus:ring-2 focus:ring-red-devil-600 font-light text-gray-200 transition-all duration-300 ease-in-out bg-gunmetal-400 block w-full rounded-md bg-white/5 px-3.5 py-2 mt-2 text-base placeholder:font-light placeholder:text-gray-600"
                />
                <div class="invalid-feedback text-red-devil-400 text-sm mt-1">
                  Please provide your email address.
                </div>
              </div>
            </div>

            <div class="sm:col-span-2">
              <label for="message" class="block text-sm/6 text-gray-300"
                >Message</label
              >
              <div class="mt-2.5">
                <textarea
                  name="message"
                  required
                  placeholder="Message"
                  id="message"
                  rows="4"
                  class="focus:ring-2 focus:ring-red-devil-600 font-light text-gray-200 transition-all duration-300 ease-in-out bg-gunmetal-400 block w-full rounded-md bg-white/5 px-3.5 py-2 mt-2 text-base placeholder:font-light placeholder:text-gray-600"
                ></textarea>
              </div>
            </div>
          </div>
          <div class="mt-8 flex justify-end">
            <button
              type="submit"
              class="block rounded-md bg-red-devil-600 px-3.5 py-2.5 text-center text-sm font-light text-slate-200 shadow-xs hover:bg-red-devil-400 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-red-devil-600 transition-all ease-in-out duration-300 ease-in-out"
            >
              Let's talk
            </button>

           
          </div>
          <div id="result" class="mt-3 text-center text-xl"></div>
        </div>
      </form>
      <div
        class="relative px-6 pt-24 pb-20 sm:pt-32 lg:static lg:px-8 lg:py-48"
      >
        <div class="mx-auto max-w-xl lg:mx-0 lg:max-w-lg">
          <div
            class="absolute inset-y-0 left-0 -z-10 w-full overflow-hidden lg:w-1/2"
          >
            <div
              class="absolute top-[calc(100%-13rem)] -left-56 transform-gpu blur-3xl lg:top-[calc(50%-7rem)] lg:left-[max(-14rem,calc(100%-59rem))]"
              aria-hidden="true"
            >
            </div>
          </div>
        </div>
        <h2
          class="text-4xl font-semibold tracking-tight text-pretty text-red-devil-500 font-sans sm:text-5xl"
        >
          Get in touch
        </h2>
        <p class="mt-6 text-lg/8 text-gray-300 font-light">
          We normally respond within three days.
        </p>
        <dl class="mt-10 space-y-4 text-base/7 text-gray-300">
          <div class="flex gap-x-4">
            <dt class="flex-none">
              <span class="sr-only">Address</span>
           
            </dt>
            <dd>
              Bangkok, Thailand</dd>
          </div>
          <div class="flex gap-x-4">
            <dt class="flex-none">
              <span class="sr-only">Telephone</span>
              
            </dt>
            <dd>
              <a
                class=" text-red-devil-500 hover:text-red-600 transition-all duration-300 ease-in-out"
                href="tel:+1 (555) 234-5678">+66 (099) 453-4417</a
              >
            </dd>
          </div>
          <div class="flex gap-x-4">
            <dt class="flex-none">
              <span class="sr-only">Email</span>
              
            </dt>
            <dd>
              <a
                class="hover:text-red-600 transition-all duration-300 ease-in-out"
                href="mailto:alan@redream.cc">alan@redream.cc</a
              >
            </dd>
          </div>
        </dl>
      </div>
    </div>
  </div>
</Layout>

<script>
  // Client-side JavaScript
  const textarea = document.getElementById("message") as HTMLTextAreaElement;

  const adjustHeight = () => {
    if (textarea) {
      textarea.style.height = "auto";
      textarea.style.height = `${textarea.scrollHeight}px`;
    }
  };

  textarea?.addEventListener("input", adjustHeight);
  // Initial height adjustment
  window.addEventListener("load", adjustHeight);
</script>

<script is:inline>
  document.addEventListener(
    "DOMContentLoaded",
    () => {
      const form = document.getElementById("form");
      const result = document.getElementById("result");

      form.addEventListener("submit", function (e) {
        e.preventDefault();
        form.classList.add("was-validated");
        if (!form.checkValidity()) {
          form.querySelectorAll(":invalid")[0].focus();
          return;
        }
        const formData = new FormData(form);
        const object = Object.fromEntries(formData);
        const json = JSON.stringify(object);

        result.innerHTML = "Sending...";

        fetch("https://api.web3forms.com/submit", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
            Accept: "application/json",
          },
          body: json,
        })
          .then(async (response) => {
            let json = await response.json();

            if (response.status == 200) {
              result.classList.add("text-green-500");
              result.innerHTML = json.message;
            } else {
              console.log(response);
              result.classList.add("text-red-devil-500");
              result.innerHTML = json.message;
            }
          })
          .catch((error) => {
            console.log(error);
            result.innerHTML = "Something went wrong!";
          })
          .then(function () {
            form.reset();
            form.classList.remove("was-validated");
            setTimeout(() => {
              result.style.display = "none";
            }, 5000);
          });
      });
    },
    { once: true },
  );

  // Resize textarea based on entered text amount
  const textarea = document.getElementById("message");

  textarea.addEventListener("input", function () {
    this.style.height = "auto";
    this.style.height = this.scrollHeight + "px";
  });
</script>
